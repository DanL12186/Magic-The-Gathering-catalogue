<%= form_for @user do | f | %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation unless logged_in? %>
  <%= f.password_field :password_confirmation unless logged_in? %> <br>
  <br>
  <%= f.submit %>
  
<% end %>