<body class="text-center">

  <% @iconic_cards.each_with_index do | card, idx | %>

    <h1> <%= card.name %> </h1>
    
    <%= content_tag(:h3, data: { edition: card.edition.downcase }) do -%>
      Edition: <%= link_to("#{card.edition}", "/cards/#{card.edition}") %> <%= image_tag "editions/#{card.edition.downcase}", class: "#{card.rarity.downcase} fp-edition", lazy: lazy_load?(idx) %>
    <% end -%>
    
    <h4> Artist: <%= link_to card.artist, "/cards/artists/#{card.artist}/" %> </h4>
    
    <% unless card.card_type == 'Land' %>
      <h5> Mana: 
        <% card.mana.each do | color | %>
          <%= link_to (image_tag "mana_symbols/#{color_to_mana(color)}", size: '22', lazy: lazy_load?(idx) ), "/cards/color/#{mana_color(color)}" %>
        <% end %>
      </h5>
    <% end %>

    <% if card.flavor_text %>
      <div class="flavor"> 
        <%= card.flavor_text.html_safe %> 
      </div>
    <% end %>

    <%= link_to ( image_tag(card.img_url, class: card_class(card), lazy: lazy_load?(idx) )  ), "/cards/#{card.edition}/#{card.name}/" %> 
      
  <% end %>

</body>