<h1> Matches: </h1>

<% @cards.each do | card | %>
  <li>
    <div class = "btn btn-med" data-toggle="popover" data-url="<%= card.img_url %>" title = " "> 
      <%= link_to(card.name, card_path(card.id), class: "popover-card") %> 
    </div>
  </li>
<% end %>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="popover"]').popover({
      html: true,
      class: 'modifiable',
      trigger: 'hover',
      delay: { "show": 200, "hide": 150 },
      content: function() { 
        return `<img src = "${this.getAttribute('data-url')}" >`
      }
    })
  })
</script>