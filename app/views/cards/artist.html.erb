<% title("MTG - #{params[:artist]}") %>

<h1 class='text-center'> <%= params[:artist] %> </h1>

<% @cards.each_with_index do | card, idx | %> 
  <h2> <%= truncate_at_three_words(card.name) %> </h2> 

  <div class = "col-sm-2 filter"> 
    <%= link_to ( image_tag card.img_url, class: "filter-img #{card.edition.downcase}", lazy: (true if idx > 5) ), "/cards/#{card.edition}/#{card.name}" %> 
  </div>
<% end %>