<h1 class='text-center'> <%= params[:artist] %> </h1>

<% @cards.each do | card | %> 
  <h2> <%= truncate_at_three_words(card.name) %> </h2> 

  <div class = "col-sm-2 filter"> 
    <%= link_to ( image_tag card.img_url, class: "filter-img #{card.edition.downcase}", lazy: true ), "/cards/#{card.edition}/#{card.name}" %> 
  </div>
<% end %>